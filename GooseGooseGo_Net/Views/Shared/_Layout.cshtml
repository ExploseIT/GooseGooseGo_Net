<!DOCTYPE html>
<html lang="en">
    @{
    ViewData["Title"] = "Home Page";
    mApp _m_App = @Model;
    }
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GooseGooseGo_Net</title>
    <link rel="stylesheet" href="~/dist/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/dist/fontawesome-free/css/all.css" />
    <link rel="stylesheet" href="~/site/site.css" asp-append-version="true" />

</head>
<body>
    <script src="~/dist/jquery/jquery.min.js"></script>
    <script src="~/dist/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/site/site.js" asp-append-version="true"></script>
    
    <input type="hidden" id="hdUrlBase" value="@_m_App.mUrl" />

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GooseGooseGo_Net</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GooseGooseGo_Net - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
